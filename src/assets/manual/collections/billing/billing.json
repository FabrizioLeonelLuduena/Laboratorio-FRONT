        },
        {
          "type": "note",
          "variant": "info",
          "title": "Limpieza",
          "text": "<br>Utilice el botón <strong><i class='pi pi-refresh'></i> Limpiar</strong> dentro del modal para restablecer la búsqueda."
        },
        {
          "type": "divider"
        }
      ]
